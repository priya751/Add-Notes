<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personal Notes</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>
<body>
    <div class="container text-center">
        <!-- parsals -->
        <%- include('header') %> 
        <a href="/notes/new" class="btn btn-success rounded-0">Add Notes</a>
        <div class="row justify-content-center">
        <% notes.forEach(note=>{ %>
        
            <div class="col-md-3 col-sm-6 col-xs-12 bg-light card mt-5 mx-4 ">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= note.title%>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <%= note.createdAt.toLocaleDateString() %>
                    </h6>
                    <p class="card-text">
                        <%= note.description.substring(0,20)%>....
                    </p>
                    <a href="/notes/<%=note.slug%>"class="btn btn-primary rounded-0">Read More</a>
                    
                    <form action="/notes/<%=note.id%>?_method=DELETE" method="post" class="d-inline">
                     <button type="submit" class="btn btn-danger rounded-0">Delete</button>
                    </form>
                </div>
            </div>
        
        <% }) %>
    </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>
</body>
</html>